<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th><%= t('.User') %></th>
      <th><%= t('.Title') %></th>
      <th><%= t('.Image') %></th>
      <th><%= t('.Content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.user.name %></td>
        <td><%= picture.title %></td>
        <td><%= image_tag picture.image.url, size: "200x100" %></td>
        <td><%= picture.content %></td>
        <td><%= link_to t('.Show'), picture %></td>
        <% if picture.user == @user %>
        <td><%= link_to t('.Edit'), edit_picture_path(picture) %></td>
        <td><%= link_to t('.Destroy'), picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

