<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<% # if @favorite_pictures.present? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Content</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @favorite_pictures.each do |picture| %>
        <tr>
          <td><%= picture.title %></td>
          <td><%= image_tag picture.image.url, size: "200x100" %></td>
          <td><%= picture.content %></td>
          <td><%= link_to 'Show', picture %></td>
          <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
          <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% # end %>

<br>

<%= link_to '画像一覧', pictures_path %>
<%= link_to 'New Picture', new_picture_path %>
